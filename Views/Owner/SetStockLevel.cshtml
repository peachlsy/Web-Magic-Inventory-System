@model WDTA2.Models.BusinessModels.OwnerInventory
@{
    ViewData["Title"] = "SetStockLevel";
}

<h2>Setting Stock Level</h2>
<br>
<h4>Product name: @Model.Product.Name</h4>
<h4>Current stock level: @Model.StockLevel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetStockLevel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="StockLevel" class="control-label">Set level to</label>
                <input asp-for="StockLevel" class="form-control" />
                <span asp-validation-for="StockLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Inventory">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

