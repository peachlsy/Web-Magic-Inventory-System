
@model IEnumerable<StoreInventory>

@{
    ViewBag.Title = "Store Inventory";
}
@using WDTA2.Data


<h1>Inventory</h1>
<br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @*HTMLHelper*@
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockLevel)
                </td>
                <td>                  
                <a asp-action="AddStockRequest" asp-route-id="@item.ProductID" class="btn btn-info btn-sm" role="button">Request</a>
                </td>
            </tr>
        }
    </tbody>
</table>